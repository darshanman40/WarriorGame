<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  
	
        <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Store Weapons"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lvWeapon1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Buy" />

        <Button
            android:id="@+id/bCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/bBuy"
            android:text="Cancel" />

    </RelativeLayout>

            <ListView
                android:id="@+id/lvWeapon1"
                android:layout_width="151dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv1"
                android:layout_toLeftOf="@+id/tvItmStatus1" >

            </ListView>

            <TextView
                android:id="@+id/tvItmStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvGold1"
                android:layout_below="@+id/tvGold1"
                android:layout_marginTop="36dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvGold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStr1"
                android:layout_marginLeft="62dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="Pla Gold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvStr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvGold1"
                android:layout_below="@+id/tv1"
                android:text="Pla Str"
                android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>